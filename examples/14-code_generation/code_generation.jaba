cpp :CodegenExample do
  type :console
  platforms [:windows_x86_64]
  configs [:Debug, :Release]
  src ['main.cpp', 'generator.rb', '*.xyz']
  src %w(src1.h src2.h src1.cpp src2.cpp), :force, prefix: 'generated/'
 # TODO: how to support multiple outputs
  rule 'generated/src1.cpp', in: ['src1.xyz'], imp_in: ['generator.rb'], cmd: 'ruby $(imp_in[0]) $(in[0])'
  rule 'generated/src2.cpp', in: ['src2.xyz'], imp_in: ['generator.rb'], cmd: 'ruby $(imp_in[0]) $(in[0])'
end
