define :buildtool do

  title 'Custom build tool'
  
  attr :message, type: :string do
    title 'Build message'
  end

  attr :output, type: :file do
    title 'Build tool output file'
    basedir_spec :definition_root
  end
  
  attr_array :outputs, type: :file do
    title 'Build tool output files'
    basedir_spec :definition_root
  end

  attr :command, type: :string do
    title 'Build tool command line invocation'
  end

end
